{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@tinkubot/api-client": ["../../packages/api-client/src/index.ts"],
      "@tinkubot/api-client/*": ["../../packages/api-client/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
